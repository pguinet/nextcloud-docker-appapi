# ===========================================
# Configuration Nextcloud Docker (MariaDB)
# ===========================================
# Copiez ce fichier vers .env et modifiez les valeurs
# cp .env.mariadb.example .env

# ===========================================
# Domaine
# ===========================================
NEXTCLOUD_DOMAIN=cloud.example.com

# ===========================================
# Version Nextcloud
# ===========================================
# Voir https://hub.docker.com/_/nextcloud/tags
NEXTCLOUD_VERSION=32

# ===========================================
# Compte administrateur initial
# ===========================================
# Ignoré si vous importez une config.php existante
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=ChangeMe_AdminPassword123!

# ===========================================
# Base de données MariaDB
# ===========================================
MYSQL_DATABASE=nextcloud
MYSQL_USER=nextcloud
MYSQL_PASSWORD=ChangeMe_DbPassword456!
MYSQL_ROOT_PASSWORD=ChangeMe_RootPassword789!

# ===========================================
# Configuration PHP (optionnel)
# ===========================================
PHP_MEMORY_LIMIT=1G
PHP_UPLOAD_LIMIT=10G

# ===========================================
# Chemin des données (optionnel)
# ===========================================
# Par défaut: ./data (relatif au docker-compose)
# Exemple: /data ou /mnt/storage/nextcloud
#DATA_PATH=/data
